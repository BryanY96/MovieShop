@model ApplicationCore.Models.CastResponseModel

<div class="container-fluid bg-info" style="color:white;">
    <div class="row">
        <div class="col-6">
            <div class="row justify-content-end">
                <div class="col-4">
                    <img src="@Model.ProfilePath" class="img-fluid" alt="@Model.Name" />
                </div>
            </div>
        </div>
        <div class="col-6">
            <h1>@Model.Name</h1>
            <span>
                Gender: @if (Model.Gender == "1")
                            {<span>Female</span>}
                        else
                            {<span>Male</span>}
            </span>
        </div>
    </div>
</div>

<div>
    <ul>
        <li class="list-group-item">MOVIES</li>
        @foreach (var movie in Model.Movies)
        {
    <li class="list-group-item">
        <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id"><img src="@movie.PosterUrl" class="img-fluid" alt="@movie.Title" /></a>
        @movie.Title
    </li>
        }
    </ul>
</div>

